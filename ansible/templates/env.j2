# 应用配置
APP_NAME={{ app_name }}
NODE_ENV={{ deploy_environment }}

# 应用环境变量
{% for key, value in app_env.items() %}
{{ key }}={{ value }}
{% endfor %}

# 数据库配置
{% if app_services.postgresql.enabled %}
DATABASE_URL=postgresql://{{ app_services.postgresql.user }}:{{ app_services.postgresql.password }}@localhost:5432/{{ app_services.postgresql.database }}
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB={{ app_services.postgresql.database }}
POSTGRES_USER={{ app_services.postgresql.user }}
POSTGRES_PASSWORD={{ app_services.postgresql.password }}
{% endif %}

# Redis配置
{% if app_services.redis.enabled %}
REDIS_URL=redis://{% if redis_password %}:{{ redis_password }}@{% endif %}localhost:{{ redis_port }}/0
REDIS_HOST=localhost
REDIS_PORT={{ redis_port }}
{% if redis_password %}REDIS_PASSWORD={{ redis_password }}{% endif %}
{% endif %}

# 应用配置
APP_SECRET={{ app_secret_key }}
ADMIN_EMAIL={{ admin_email }}
DOMAIN={{ app1_domain }}

# 安全配置
ALLOWED_ORIGINS=https://{{ app1_domain }}
CORS_ORIGINS=https://{{ app1_domain }}

# 日志配置
LOG_LEVEL={{ log_level | default('info') }}
