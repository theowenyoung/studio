version: '3.8'

# =====================================
# Caddy 独立服务
# 自包含配置，最小依赖
# =====================================

services:
  caddy:
    image: caddy:2-alpine
    container_name: caddy
    restart: unless-stopped
    
    ports:
      - "80:80"
      - "443:443"
      - "443:443/udp"  # HTTP/3
      - "127.0.0.1:2019:2019"  # Admin API
    
    volumes:
      # 主配置文件
      - /data/caddy/Caddyfile:/etc/caddy/Caddyfile:ro
      
      # 数据目录（证书等）
      - /data/caddy/data:/data
      
      # 配置缓存目录
      - /data/caddy/config:/config
    
    networks:
      - shared_network
    
    # 环境变量文件
    env_file:
      - .env
    
    # 健康检查
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:2019/config/"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 10s
    
    # 资源限制
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '2.0'
        reservations:
          memory: 256M
          cpus: '0.5'
    
    # 日志配置
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "5"
    
    # 安全配置
    security_opt:
      - no-new-privileges:true


# =====================================
# 共享网络
# =====================================
networks:
  shared_network:
    external: true
