
# =====================================
# {{ app_name | upper }} 应用独立配置
# 自包含，最小依赖
# =====================================

services:
  {{ app_name }}:
    image: "{{ app_name }}:latest"
    restart: unless-stopped
    
    # 环境变量文件（从 AWS Parameter Store 获取）
    env_file:
      - .env
    
    # 数据卷挂载（如果需要）
    volumes:
      - /data/{{ app_name }}/data:/app/data
    
    # 端口映射（仅本地访问，通过 Caddy 代理）
    ports:
      - "127.0.0.1:{{ app_port | default('3000') }}:{{ app_port | default('3000') }}"
    
    networks:
      - shared_network
    
    # 健康检查（零停机部署必需）
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:{{ app_port | default('3000') }}/health"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 30s
    
    # 资源限制
    deploy:
      resources:
        limits:
          memory: 1G
          cpus: '1.0'
        reservations:
          memory: 512M
          cpus: '0.5'
    
    # 日志配置
    logging:
      driver: json-file
      options:
        max-size: "10m"
        max-file: "3"
    
    # 安全配置
    security_opt:
      - no-new-privileges:true
    
    # docker-rollout 标签配置
    labels:
      # 零停机部署配置
      docker-rollout.timeout: "60"
      docker-rollout.wait-after-healthy: "5"
      docker-rollout.pre-stop-hook: "touch /tmp/drain && sleep 10"
      
      # 应用信息
      app.name: "{{ app_name }}"
      app.environment: "{{ deploy_environment | default('production') }}"

# =====================================
# 共享网络
# =====================================
networks:
  shared_network:
    external: true
