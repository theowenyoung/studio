{
  "name": "node-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:server": "tsx watch src/server.ts",
    "dev:client": "vite",
    "dev": "concurrently \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "vite build",
    "build": "pnpm run db:generate && pnpm run build:server && pnpm run build:client",
    "start": "node dist/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "typecheck": "tsc --noEmit && tsc --noEmit --project tsconfig.server.json"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/static": "^8.0.1",
    "@prisma/client": "^5.19.1",
    "fastify": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "pino-pretty": "^12.0.0",
    "prisma": "^5.19.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.3"
  }
}
